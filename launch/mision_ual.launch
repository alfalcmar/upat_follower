<launch>
    <arg name="save_data" default="false"/>
    <arg name="multi" default="true"/>
    <arg name="robot_model" default="iris"/>
    <arg name="pub_rate" default="50.0"/>

    <!-- Visualization -->
    <node pkg="rviz" type="rviz" name="rviz_node" args="-d $(find uav_path_manager)/rviz/mision.rviz" required="true"/>

    <!-- UAL Server -->
    <include file="$(find uav_path_manager)/launch/server_ual.launch">
        <arg name="multi" value="$(arg multi)"/>
        <arg name="robot_model" value="$(arg robot_model)"/>
        <arg name="ual_pub_rate" value="$(arg pub_rate)"/>
    </include>

    <!-- UAV Path Manager nodes -->
    <node pkg="uav_path_manager" type="path_manager_node" name="path_manager_node" output="screen">
        <param name="uav_id" value="1"/>
        <param name="save_csv" value="$(arg save_data)"/>
        <param name="pub_rate" value="$(arg pub_rate)"/>
    </node>
    <node pkg="uav_path_manager" type="path_follower_node" name="path_follower_node" output="screen" required="true">
        <param name="uav_id" value="1"/>
        <param name="pub_rate" value="$(arg pub_rate)"/>
    </node>
    <node pkg="uav_path_manager" type="path_generator_node" name="path_generator_node" output="screen" required="true">
        <param name="pub_rate" value="$(arg pub_rate)"/>
    </node>

    <!-- Add one more UAV and nodes to manage it -->
    <group if="$(arg multi)">
        <node pkg="uav_path_manager" type="path_manager_node" name="path_manager_node_2" output="screen">
            <param name="uav_id" value="2"/>
            <param name="pub_rate" value="$(arg pub_rate)"/>
        </node>
        <node pkg="uav_path_manager" type="path_follower_node" name="path_follower_node_2" output="screen" required="true">
            <param name="uav_id" value="2"/>
            <param name="pub_rate" value="$(arg pub_rate)"/>
        </node>
    </group>

</launch>
